<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_color">

    <item>
        <shape android:shape="rectangle">

            <!-- Gradient Background -->
            <gradient
                android:angle="135"
                android:startColor="@color/primary_light"
                android:centerColor="@color/secondary"
                android:endColor="@color/primary_dark"
                android:type="linear" />

            <!-- Rounded Corners -->
            <corners android:radius="24dp" />

            <!-- Optional Shadow (Only for elevated views) -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>

        </shape>
    </item>
</ripple>
